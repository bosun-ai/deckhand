<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Codebases</h1>
    <%= link_to "New codebase", new_codebase_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="codebases" class="min-w-full">
    <%= render @codebases.reverse %>
  </div>

  <div id="shell_tasks_output" tabindex="0" class="collapse bg-primary ma-2 mb-4 text-accent-content ">
    <div class="collapse-title text-xl font-medium">
      <h2 class="">Shell tasks</h2>
    </div>
    <div class="collapse-content bg-primary-focus accent-content ">
      <%= turbo_stream_from :shell_tasks %>
      <%= turbo_frame_tag "shell_tasks", class: "min-w-full" do %>
        <%= render @shell_tasks.reverse %>
      <% end %>
    </div>
  </div>
</div>