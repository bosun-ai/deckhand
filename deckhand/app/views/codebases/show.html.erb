<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @codebase %>

	<div class="card bg-base-200 shadow-xl mt-4 mb-4">
    <div class="card-body relative">
      <h3 class="card-title">
        Agents
      </h3>

      <%= render 'codebases/services_list', services: @codebase.services %>
    </div>
  </div>


  <div id="agent_runs" class="card bg-primary">
    <% @codebase.agent_runs.reorder(created_at: 'DESC').root.first.tap do |agent_run| %>
      <%= render agent_run if agent_run %>
    <% end %>
  </div>

  <%= link_to "Back to codebases", main_deck_path, class: "btn btn-neutral text-white" %>
</div>
