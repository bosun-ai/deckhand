<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @codebase %>

  <div id="agent_run_events_output" tabindex="0" class="collapse bg-accent ma-2 mb-4 text-accent-content ">
    <div class="collapse-title text-xl font-medium">
      <h2>Agent run events</h2>
    </div>

    <% @codebase.agent_runs.reverse.each do |agent_run| %>
      <%= render agent_run %>
    <% end %>
  </div>


  <%= link_to "Back to codebases", codebases_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
