<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @codebase_agent_service %>

    <%= link_to "Edit this codebase_agent_service", edit_codebase_agent_service_path(@codebase_agent_service), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this codebase_agent_service", codebase_agent_service_path(@codebase_agent_service), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to codebase_agent_services", codebase_agent_services_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <div id="agent_runs" class="card bg-primary">
    <% @codebase_agent_service.agent_runs.root.reorder(created_at: 'DESC').each do |agent_run| %>
      <%= render agent_run %>
    <% end %>
  </div>
</div>
