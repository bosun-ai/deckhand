<div id="<%= dom_id task %>" data-controller="tasks">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= task.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Script:</strong>
    <div class="terminal-output w-full">
      <%= ansi_to_html task.script %>
    </div>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Output:</strong>
    <div class="terminal-output w-full">
      <%= ansi_to_html task.standard_output %>
    </div>
  </p>
</div>
